<div class="md:w-2/3 w-full flex flex-col px-16 py-8 flex flex-col items-center">
  <%= image_tag(@song.image, class: "w-80 h-80 object-cover mb-8") if @song.image.attached? %>

  <div data-controller="audio-player", data-audio-player-url-value="<%= url_for(@song.audio) %>", class="w-full h-40 max-w-2xl flex flex-col items-center ">
    <div data-audio-player-target="preview", class="w-full">
    </div>
    <%= link_to '#', data: {action: "audio-player#togglePlaying"} do %>
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-10">
        <path stroke-linecap="round" stroke-linejoin="round" d="M5.25 5.653c0-.856.917-1.398 1.667-.986l11.54 6.347a1.125 1.125 0 0 1 0 1.972l-11.54 6.347a1.125 1.125 0 0 1-1.667-.986V5.653Z" />
      </svg>

      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-10 hidden">
        <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 5.25v13.5m-7.5-13.5v13.5" />
      </svg>
    <% end %>
  </div>

  <div class="text-lg font-bold mt-4">
    <%= @song.title %>
  </div>
  <p class="font-light">by <%= @song.user.username %></p>

  <div class="text-lg">
    <%= @song.description %>
  </div>

  <% if current_user == @song.user %>
    <%= link_to "Edit this song", edit_song_path(@song), class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <div class="inline-block ml-2">
      <%= button_to "Destroy this song", @song, method: :delete, class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 font-medium" %>
    </div>
  <% end %>

</div>
